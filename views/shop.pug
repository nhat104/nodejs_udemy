extends layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/product.css")

block content
  main
      if products.length > 0
        .grid
          each product in products
            article.card.product-item
              header.card__header
                h1.product__title #{product.title} 
              .card__image
                img(src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png", alt="An Image")
              .card__content
                h2.product__price $19.99
                p.product__description Hieu ngu vcl ngu. co cai ngu phap tieng anh cung khong xong.
              .card__actions
                button.btn Add to Cart
      else
        h1 No Products
